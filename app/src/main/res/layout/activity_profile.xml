<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="8dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nameP"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#701CB7CD"
                android:textColor="#0000"/>

            <TextView
                android:id="@+id/emailidP"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/nameP"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#701CB7CD"
                android:textColor="#0000"
                 />

            <TextView
                android:id="@+id/MobilenumberP"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dimen_16dp"

                android:layout_height="35dp"
                android:layout_below="@+id/emailidP"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#701CB7CD"
                android:textColor="#0000"
                />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dimen_16dp"

                android:layout_height="35dp"
                android:layout_below="@+id/MobilenumberP"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#701CB7CD"
                android:textColor="#0000" />

            <TextView
                android:id="@+id/gstP"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dimen_16dp"

                android:layout_height="35dp"
                android:layout_below="@+id/address_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#701CB7CD"
                android:textColor="#0000" />


        </RelativeLayout>


</RelativeLayout>



