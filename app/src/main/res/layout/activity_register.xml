<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shopp"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="8dp">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/register">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#55000000"
        android:inputType="textPersonName"
        android:hint="Name" />

    <EditText
        android:id="@+id/emailid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#55000000"
        android:inputType="textWebEmailAddress"
        android:hint="E-mail" />

    <EditText
        android:id="@+id/Mobilenumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/emailid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:digits="1234567890"
        android:background="#55000000"
        android:inputType="phone"
        android:hint="Mobile Number" />

    <EditText
        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Mobilenumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#55000000"
        android:inputType="textPostalAddress"
        android:hint="Shop Address" />

    <EditText
        android:id="@+id/gst"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/shop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#55000000"
        android:hint="GST Number" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/gst"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#55000000"
        android:inputType="textPassword"
        android:hint="Password" />

    <EditText
        android:id="@+id/passwordcnf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#55000000"
        android:inputType="textPassword"
        android:hint="Password Confirmation" />
    </RelativeLayout>
</ScrollView>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#C4315AFF"
        android:text="Register" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="BallPulseSyncIndicator" />
</RelativeLayout>



